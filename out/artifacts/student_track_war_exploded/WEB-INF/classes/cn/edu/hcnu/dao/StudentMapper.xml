<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.hcnu.dao.StudentMapper">
    <!--增加一个Book-->
    <insert id="addStudent" parameterType="Student">
      insert into student_track.student_info(name,sex,sno,major,grade,stu_cell,parent_cell)
      values (#{name}, #{sex}, #{sno}, #{major}, #{grade}, #{stu_cell}, #{parent_cell})
   </insert>

    <!--根据id删除一个Book-->
    <delete id="deleteStudentById" parameterType="int">
      delete from student_track.student_info where bookID=#{sno}
   </delete>

    <!--更新Book-->
    <update id="updateStudent" parameterType="Student">
      update student_track.student_info
      set name = #{name},sex = #{sex},sno = #{sno},major = #{major},grade = #{grade},stu_cell = #{stu_cell},parent_cell = #{parent_cell}
      where sno = #{sno}
   </update>

    <!--根据id查询,返回一个Book-->
    <select id="queryStudentByName" resultType="Student">
      select * from student_track.student_info
      where name = #name}
   </select>

    <!--查询全部Book-->
    <select id="queryAllBook" resultType="Student">
      SELECT * from student_track.books
   </select>

</mapper>